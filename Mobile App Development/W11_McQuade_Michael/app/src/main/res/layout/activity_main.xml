<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="372dp"
            android:layout_height="47dp"
            android:id="@+id/tvSum" android:textAlignment="viewEnd"
            android:text="0" android:textSize="30sp" android:typeface="normal" android:fontFamily="monospace"
            android:textColor="@android:color/black" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="371dp"
            android:layout_height="429dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvSum" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="1"
                    android:layout_weight="1"
                    android:layout_margin="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="61dp"
                    tools:layout_editor_absoluteX="57dp" android:id="@+id/btn1" android:onClick="addPoints"/>
            <Button
                    android:text="2"

                    android:layout_margin="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="61dp"
                    tools:layout_editor_absoluteX="57dp" android:id="@+id/btn2"
                    android:layout_weight="1" android:onClick="addPoints"/>
            <Button
                    android:text="3"
                    android:layout_margin="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="61dp"
                    tools:layout_editor_absoluteX="57dp" android:id="@+id/btn3" android:layout_weight="1"
                    android:onClick="addPoints"/>
            <Button
                    android:text="4"

                    android:layout_margin="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="61dp"
                    tools:layout_editor_absoluteX="57dp" android:id="@+id/btn4" android:layout_weight="1"
                    android:onClick="addPoints"/>
        </LinearLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="5"

                    android:layout_weight="1"
                    android:layout_margin="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="61dp"
                    tools:layout_editor_absoluteX="57dp" android:id="@+id/btn5" android:onClick="addPoints"/>
            <Button
                    android:text="6"

                    android:layout_margin="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="61dp"
                    tools:layout_editor_absoluteX="57dp" android:id="@+id/btn6" android:layout_weight="1"
                    android:onClick="addPoints"/>
            <Button
                    android:text="7"

                    android:layout_margin="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="61dp"
                    tools:layout_editor_absoluteX="57dp" android:id="@+id/btn7" android:layout_weight="1"
                    android:onClick="addPoints"/>
            <Button
                    android:text="8"
                    android:onClick="addPoints"
                    android:layout_margin="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="61dp"
                    tools:layout_editor_absoluteX="57dp" android:id="@+id/btn8" android:layout_weight="1"/>
        </LinearLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="9"
                    android:onClick="addPoints"
                    android:layout_weight="1"
                    android:layout_margin="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="61dp"
                    tools:layout_editor_absoluteX="57dp" android:id="@+id/btn9"/>
            <Button
                    android:text="10"
                    android:onClick="addPoints"
                    android:layout_margin="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="61dp"
                    tools:layout_editor_absoluteX="57dp" android:id="@+id/btn10" android:layout_weight="1"/>
            <Button
                    android:text="11"
                    android:onClick="addPoints"
                    android:layout_margin="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="61dp"
                    tools:layout_editor_absoluteX="57dp" android:id="@+id/btn11" android:layout_weight="1"/>
            <Button
                    android:text="12"
                    android:onClick="addPoints"
                    android:layout_margin="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="61dp"
                    tools:layout_editor_absoluteX="57dp" android:id="@+id/btn12" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="Undo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnUndo" android:layout_weight="1"
                    android:onClick="undo"/>
            <Button
                    android:text="Clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnClear" android:layout_weight="1"
                    android:onClick="clearPoints"/>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>